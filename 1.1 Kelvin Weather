//A variable named kelvin is equal to 293
const kelvin = 293;
//Converting kelvin to celsius by subtracting 273 from the Kelvin variable
const celsius = kelvin-273;
//Calculating celsius to fahrenheit
var fahrenheit = celsius * (9 / 5) + 32;
fahrenheit = Math.floor(fahrenheit);
console.log(`The temperature is ${fahrenheit} degrees in Fahrenheit.`)

